{
  "format": "page",
  "id": "insight",
  "label": "Insight",
  "repeatable": true,
  "status": true,
  "json": {
    "Main": {
      "uid": {
        "type": "UID",
        "config": {
          "label": "UID"
        }
      },
      "background_color": {
        "type": "Select",
        "config": {
          "label": "Background Color",
          "placeholder": "",
          "options": ["None", "Light", "Dark"],
          "default_value": "None"
        }
      },
      "tagline": {
        "type": "Text",
        "config": {
          "label": "Tagline",
          "placeholder": ""
        }
      },
      "title": {
        "type": "StructuredText",
        "config": {
          "label": "Title",
          "placeholder": "",
          "allowTargetBlank": true,
          "multi": "heading1,heading2"
        }
      },
      "body": {
        "type": "StructuredText",
        "config": {
          "label": "Body",
          "placeholder": "",
          "allowTargetBlank": true,
          "multi": "paragraph,preformatted,strong,em,rtl,o-list-item,list-item,embed,image,hyperlink"
        }
      },
      "image": {
        "type": "Image",
        "config": {
          "label": "Image",
          "constraint": {},
          "thumbnails": []
        }
      },
      "categories": {
        "type": "Group",
        "config": {
          "label": "Categories",
          "repeat": true,
          "fields": {
            "name": {
              "type": "Link",
              "config": {
                "label": "Category Name",
                "select": "document",
                "repeat": false,
                "customtypes": ["insights_categories"]
              }
            }
          }
        }
      },
      "authors": {
        "type": "Group",
        "config": {
          "label": "Authors",
          "repeat": true,
          "fields": {
            "author": {
              "type": "Link",
              "config": {
                "label": "Author",
                "select": "document",
                "repeat": false,
                "customtypes": ["author"]
              }
            }
          }
        }
      },
      "include_newsletter_sign_up": {
        "type": "Boolean",
        "config": {
          "label": "Include Newsletter Sign Up",
          "placeholder_false": "false",
          "placeholder_true": "true",
          "default_value": false
        }
      },
      "slices": {
        "type": "Slices",
        "fieldset": "Slice Zone",
        "config": {
          "choices": {
            "content_carousel": {
              "type": "SharedSlice"
            },
            "cta_banner": {
              "type": "SharedSlice"
            },
            "numbered_list": {
              "type": "SharedSlice"
            },
            "content_column": {
              "type": "SharedSlice"
            },
            "testimonials": {
              "type": "SharedSlice"
            },
            "image_text": {
              "type": "SharedSlice"
            },
            "simple_text": {
              "type": "SharedSlice"
            },
            "horizontal_accordion": {
              "type": "SharedSlice"
            }
          }
        }
      }
    },
    "SEO & Metadata": {
      "meta_title": {
        "config": {
          "label": "Meta Title",
          "placeholder": "A title of the page used for social media and search engines"
        },
        "type": "Text"
      },
      "meta_description": {
        "config": {
          "label": "Meta Description",
          "placeholder": "A brief summary of the page"
        },
        "type": "Text"
      },
      "meta_image": {
        "config": {
          "constraint": {
            "height": 1260,
            "width": 2400
          },
          "label": "Meta Image",
          "thumbnails": []
        },
        "type": "Image"
      }
    }
  }
}
